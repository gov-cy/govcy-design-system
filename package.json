{
    "name": "gov-cy-dsf-design-system",
    "version": "0.0.1",
    "description": "",
    "main": "index.html",
    "author": "DMRID - DSF Team",
    "license": "MIT",
    "scripts": {
        "css-build": "node-sass --omit-source-map-url src/sass/main.scss build/css/main.css && copyfiles src/js/app.js build/js ",
        "css-build-distribution": "node-sass --omit-source-map-url src/sass/main.scss dist/css/main.min.css --output-style compressed",
        "css-watch": "npm run css-build -- --watch",
        "css-start": "npm run css-watch",
        "watch-css": "nodemon -e scss -x \"npm run css-build\"",
        "start": "http-server -c-1 -p 3000 -o build/"
    },
    "dependencies": {
        "bootstrap": "^5.1.3"
    },
    "devDependencies": {
        "http-server": "^13.0.2",
        "node-sass": "^6.0.1",
        "nodemon": "^2.0.15",
        "copyfiles": "^2.4.1"
    }
}
